version: '3.4'

services:
#############
## Lbrycrd ##
#############
  lbrycrd:
    image: lbry/lbry-docker:lbrycrd-linux-x86_64-production
    restart: always
    ports:
      - "11336:9246"
      - "11337:11337"
    ## host volumes for persistent data such as wallet private keys.
    volumes:
      - "../persist/data:/data"
    environment:
      - RUN_MODE=testnet
